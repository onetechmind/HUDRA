<Window
    x:Class="HUDRA.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HUDRA"
    xmlns:controls="using:HUDRA.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Border x:Name="MainBorder" CornerRadius="20" Background="Transparent" >
        <Grid x:Name="LayoutRoot">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Alt+Tab button in top-left corner -->
            <Button x:Name="AltTabButton"
                Click="AltTabButton_Click"
                Width="50"
                Height="50"
                Background="Transparent"
                Foreground="White"
                CornerRadius="16"
                BorderThickness="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="10,10,0,0"
                Grid.Row="0"
                Grid.RowSpan="2"
                ToolTipService.ToolTip="Previous App &amp; Hide">
                <FontIcon x:Name="AltTabButtonIcon"
              FontFamily="Segoe MDL2 Assets"
              Glyph="&#xE8AB;"
              FontSize="20"/>
            </Button>

            <Button x:Name="CloseButton"
                Click="CloseButton_Click"
                Width="50"
                Height="50"
                Background="Transparent"
                Foreground="White"
                CornerRadius="16"
                BorderThickness="0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,10,10,0"
                Grid.Row="0"
                Grid.RowSpan="2">
                <Button.Content>
                    <FontIcon FontFamily="Segoe MDL2 Assets"
                  Glyph="&#xE70D;"
                  FontSize="20"/>
                </Button.Content>
            </Button>

            <!-- Control pickers centered in the main area -->
            <StackPanel Grid.Row="0" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Top" 
                    Spacing="20"
                    Margin="0,50,0,0">

                <!-- TDP Section -->
                <controls:TdpPickerControl x:Name="TdpPicker"/>

                <!-- Resolution Section -->
                <controls:ResolutionPickerControl x:Name="ResolutionPicker"/>

                <!-- Audio Controls -->
                <controls:AudioControlsControl x:Name="AudioControls"/>
                
                <!-- Brightness Controls -->
                <controls:BrightnessControlControl x:Name="BrightnessControls"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>