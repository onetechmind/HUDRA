<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="HUDRA.Controls.HotkeySelector"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:HUDRA.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Border
        Padding="15,10"
        Background="#33FFFFFF"
        CornerRadius="8">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!--  Current hotkey display  -->
            <TextBlock
                x:Name="HotkeyDisplay"
                Grid.Column="0"
                VerticalAlignment="Center"
                FontFamily="Consolas"
                FontSize="13"
                FontWeight="SemiBold"
                Foreground="White"
                Text="Win + Alt + Ctrl" />

            <!--  Edit button  -->
            <Button
                x:Name="EditButton"
                Grid.Column="1"
                MinWidth="50"
                MinHeight="25"
                Margin="10,0,0,0"
                Padding="10"
                Background="#4A4A4A"
                BorderBrush="#666666"
                BorderThickness="1"
                Click="EditButton_Click"
                Content="Edit"
                CornerRadius="10"
                FontSize="12"
                Foreground="White" />
        </Grid>
    </Border>
</UserControl>