<Page
    x:Class="HUDRA.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:HUDRA.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Margin="0">
        <StackPanel
            x:Name="SettingsRootPanel"
            MaxWidth="280"
            Margin="0,15,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Spacing="20">

            <Border>
                <TextBlock
                    Padding="0,15,0,0"
                    HorizontalAlignment="Center"
                    FontFamily="Cascadia Code"
                    FontSize="18"
                    FontWeight="SemiBold"
                    IsTabStop="False"
                    Text="SETTINGS" />
            </Border>

            <!--  Default Profile  -->
            <controls:NavigableExpander
                x:Name="DefaultProfileExpander"
                Margin="0"
                Padding="0"
                HorizontalAlignment="Stretch">
                <controls:NavigableExpander.Header>
                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                        <TextBlock
                            VerticalAlignment="Center"
                            FontFamily="Segoe MDL2 Assets"
                            FontSize="16"
                            Text="&#xE771;" />
                        <TextBlock
                            Margin="8,0,0,0"
                            VerticalAlignment="Center"
                            FontFamily="Cascadia Code"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Text="Default Profile" />
                    </StackPanel>
                </controls:NavigableExpander.Header>
                <controls:NavigableExpander.Body>
                    <controls:DefaultProfileControl x:Name="DefaultProfileControl" />
                </controls:NavigableExpander.Body>
            </controls:NavigableExpander>

            <!--  Power Profile Control  -->
            <controls:NavigableExpander
                x:Name="PowerProfileExpander"
                Margin="0"
                Padding="0"
                HorizontalAlignment="Stretch">
                <controls:NavigableExpander.Header>
                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                        <TextBlock
                            VerticalAlignment="Center"
                            FontFamily="Segoe MDL2 Assets"
                            FontSize="20"
                            Text="&#xE83F;" />
                        <TextBlock
                            Margin="8,0,0,0"
                            VerticalAlignment="Center"
                            FontFamily="Cascadia Code"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Text="Power Profile" />
                    </StackPanel>
                </controls:NavigableExpander.Header>
                <controls:NavigableExpander.Body>
                    <controls:PowerProfileControl x:Name="PowerProfileControl" x:FieldModifier="public" />
                </controls:NavigableExpander.Body>
            </controls:NavigableExpander>

            <!--  Game Detection Settings  -->
            <controls:NavigableExpander
                x:Name="GameDetectionExpander"
                Margin="0"
                Padding="0"
                HorizontalAlignment="Stretch">
                <controls:NavigableExpander.Header>
                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                        <TextBlock
                            VerticalAlignment="Center"
                            FontFamily="Segoe MDL2 Assets"
                            FontSize="16"
                            Text="&#xE7FC;" />
                        <TextBlock
                            Margin="8,0,0,0"
                            VerticalAlignment="Center"
                            FontFamily="Cascadia Code"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Text="Game Detection" />
                    </StackPanel>
                </controls:NavigableExpander.Header>
                <controls:NavigableExpander.Body>
                    <controls:GameDetectionControl x:Name="GameDetectionControl" />
                </controls:NavigableExpander.Body>
            </controls:NavigableExpander>
            <!--  Startup & Windows Integration  -->
            <controls:NavigableExpander
                x:Name="StartupSettingsExpander"
                Margin="0"
                Padding="0"
                HorizontalAlignment="Stretch">
                <controls:NavigableExpander.Header>
                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                        <TextBlock
                            VerticalAlignment="Center"
                            FontFamily="Segoe MDL2 Assets"
                            FontSize="16"
                            Text="&#xE8FC;" />
                        <TextBlock
                            Margin="8,0,0,0"
                            VerticalAlignment="Center"
                            FontFamily="Cascadia Code"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Text="Startup &amp; Options" />
                    </StackPanel>
                </controls:NavigableExpander.Header>
                <controls:NavigableExpander.Body>
                    <controls:StartupOptionsControl x:Name="StartupOptionsControl" />
                </controls:NavigableExpander.Body>
            </controls:NavigableExpander>

            <!--  Copy Debug Info Button  -->
            <Button
                x:Name="CopyDebugInfoButton"
                Width="140"
                Height="45"
                HorizontalAlignment="Stretch"
                Click="CopyDebugInfoButton_Click"
                Content="Copy Debug Info" />

            <!--  Version Display  -->
            <TextBlock
                x:Name="VersionText"
                HorizontalAlignment="Center"
                FontFamily="Cascadia Code"
                FontSize="12"
                Opacity="0.6"
                Text="HUDRA Beta" />

        </StackPanel>
    </Grid>
</Page>