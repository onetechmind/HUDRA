<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="HUDRA.Controls.BrightnessControlControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ap="using:HUDRA.AttachedProperties"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:HUDRA.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    ap:GamepadNavigation.IsEnabled="True"
    ap:GamepadNavigation.NavigationGroup="MainControls"
    ap:GamepadNavigation.NavigationOrder="5"
    mc:Ignorable="d">

    <Grid Width="280" Margin="0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="55" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  Brightness Icon  -->
        <Border
            Grid.Column="0"
            BorderThickness="2"
            CornerRadius="6">
            <Button Width="50" Height="50" IsTabStop="False">
                <FontIcon
                    x:Name="MuteButtonIcon"
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="20"
                    Glyph="&#xE706;" />
            </Button>
        </Border>
        <!--  Brightness Slider with focus border  -->
        <Border
            x:Name="FocusBorder"
            Grid.Column="1"
            BorderBrush="{x:Bind FocusBorderBrush, Mode=OneWay}"
            BorderThickness="{x:Bind FocusBorderThickness, Mode=OneWay}"
            CornerRadius="6">
            <Slider
                x:Name="BrightnessSlider"
                Margin="8,0"
                Maximum="100"
                Minimum="0" />
        </Border>
    </Grid>

</UserControl>
