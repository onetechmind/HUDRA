<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="HUDRA.Controls.ResolutionPickerControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HUDRA.Controls"
    xmlns:helpers="using:HUDRA.Helpers"
    xmlns:ap="using:HUDRA.AttachedProperties"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    ap:GamepadNavigation.IsEnabled="True"
    ap:GamepadNavigation.NavigationOrder="2"
    ap:GamepadNavigation.NavigationGroup="MainControls">
    
    <StackPanel Spacing="8">
        <!-- Labels -->
        <Grid Width="280">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Resolution"
                       FontSize="14"
                       Foreground="#CCFFFFFF"
                       FontWeight="SemiBold"
                       HorizontalAlignment="Center"
                       IsTabStop="False"
                       Grid.Column="0"/>

            <TextBlock Text="Refresh Rate"
                       FontSize="14"
                       Foreground="#CCFFFFFF"
                       FontWeight="SemiBold"
                       HorizontalAlignment="Center"
                       IsTabStop="False"
                       Grid.Column="2"/>
        </Grid>

        <Grid Width="280">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Resolution ComboBox with focus border -->
            <Border Grid.Column="0"
                        BorderBrush="{x:Bind ResolutionFocusBrush, Mode=OneWay}"
                        BorderThickness="2"
                        CornerRadius="6">
                <ComboBox x:Name="ResolutionComboBox"
                              Style="{StaticResource HudraComboBoxStyle}"
                              ItemContainerStyle="{StaticResource HudraComboBoxItemStyle}"
                              HorizontalAlignment="Stretch"
                              helpers:GamepadComboBoxHelper.IsGamepadEnabled="True"/>
            </Border>

            <!-- RefreshRate ComboBox with focus border -->
            <Border Grid.Column="2"
                        BorderBrush="{x:Bind RefreshRateFocusBrush, Mode=OneWay}"
                        BorderThickness="2"
                        CornerRadius="6">
                <ComboBox x:Name="RefreshRateComboBox"
                              Style="{StaticResource HudraComboBoxStyle}"
                              ItemContainerStyle="{StaticResource HudraComboBoxItemStyle}"
                              HorizontalAlignment="Stretch"
                              helpers:GamepadComboBoxHelper.IsGamepadEnabled="True"/>
            </Border>
        </Grid>
    </StackPanel>
    
</UserControl>
