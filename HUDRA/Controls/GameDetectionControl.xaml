<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="HUDRA.Controls.GameDetectionControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ap="using:HUDRA.AttachedProperties"
    xmlns:controls="using:HUDRA.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    ap:GamepadNavigation.IsEnabled="True"
    ap:GamepadNavigation.NavigationGroup="MainControls"
    ap:GamepadNavigation.NavigationOrder="1"
    mc:Ignorable="d">

    <UserControl.Resources>
        <controls:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <StackPanel
        Margin="0,20,0,20"
        Padding="25,0,25,0"
        Spacing="15">
        <Border
            x:Name="LibraryScanningBorder"
            Padding="20,5"
            Background="#22FFFFFF"
            BorderBrush="{x:Bind LibraryScanningFocusBrush, Mode=OneWay}"
            BorderThickness="2"
            CornerRadius="12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*" />
                    <ColumnDefinition Width="1.2*" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    IsTabStop="False"
                    Style="{StaticResource SettingsLabelStyle}"
                    Text="Library Scanning" />

                <ToggleSwitch
                    x:Name="EnhancedLibraryScanningToggle"
                    Grid.Row="0"
                    Grid.Column="1"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    x:FieldModifier="public" />
            </Grid>
        </Border>

        <Border
            x:Name="ScanIntervalBorder"
            Padding="10"
            Background="#22FFFFFF"
            BorderBrush="Transparent"
            BorderThickness="0"
            CornerRadius="12">
            <StackPanel Spacing="8">
                <TextBlock
                    HorizontalAlignment="Center"
                    FontWeight="SemiBold"
                    Foreground="#CCFFFFFF"
                    IsTabStop="False"
                    Text="Scan Interval" />

                <Border
                    BorderBrush="{x:Bind ScanIntervalFocusBrush, Mode=OneWay}"
                    BorderThickness="2"
                    CornerRadius="6">
                    <ComboBox
                        x:Name="ScanIntervalComboBox"
                        HorizontalAlignment="Stretch"
                        x:FieldModifier="public"
                        IsEnabled="{x:Bind EnhancedLibraryScanningToggle.IsOn, Mode=OneWay}"
                        ItemContainerStyle="{StaticResource HudraComboBoxItemStyle}"
                        Style="{StaticResource HudraComboBoxStyle}">
                        <ComboBoxItem Content="5 mins" Tag="5" />
                        <ComboBoxItem Content="15 mins" Tag="15" />
                        <ComboBoxItem Content="30 mins" Tag="30" />
                        <ComboBoxItem Content="60 mins" Tag="60" />
                    </ComboBox>
                </Border>
            </StackPanel>
        </Border>

        <TextBlock IsTabStop="False" Style="{StaticResource SettingsDescriptionStyle}">Automatically scans games from the following launchers to support dynamic actions.</TextBlock>

        <StackPanel Spacing="8" Visibility="{x:Bind EnhancedLibraryScanningToggle.IsOn, Mode=OneWay}">
            <TextBlock
                HorizontalAlignment="Center"
                IsTabStop="False"
                Style="{StaticResource SettingsLabelStyle}"
                Text="Library Stats" />

            <!--  Visual Library Stats Grid  -->
            <Grid
                Margin="0,8,0,8"
                HorizontalAlignment="Center"
                ColumnSpacing="15"
                RowSpacing="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--  Row 1: Battle.Net and Epic  -->
                <Image
                    Grid.Row="0"
                    Grid.Column="0"
                    Width="40"
                    Height="40"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Source="/Assets/Launcher Logos/BattleNetLogo128px.png"
                    Stretch="Uniform" />
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="4,0,16,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="20"
                    Text="{x:Bind BattleNetCount, Mode=OneWay}" />
                <Image
                    Grid.Row="0"
                    Grid.Column="2"
                    Width="40"
                    Height="40"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Source="/Assets/Launcher Logos/EpicLogo128px.png"
                    Stretch="Uniform" />
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="3"
                    Margin="4,0,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="20"
                    Text="{x:Bind EpicCount, Mode=OneWay}" />

                <!--  Row 2: GOG and Origin  -->
                <Image
                    Grid.Row="1"
                    Grid.Column="0"
                    Width="40"
                    Height="40"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Source="/Assets/Launcher Logos/GOGLogo128px.png"
                    Stretch="Uniform" />
                <TextBlock
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="4,0,16,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="20"
                    Text="{x:Bind GOGCount, Mode=OneWay}" />
                <Image
                    Grid.Row="1"
                    Grid.Column="2"
                    Width="40"
                    Height="40"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Source="/Assets/Launcher Logos/OriginLogo256px.png"
                    Stretch="Uniform" />
                <TextBlock
                    Grid.Row="1"
                    Grid.Column="3"
                    Margin="4,0,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="20"
                    Text="{x:Bind OriginCount, Mode=OneWay}" />

                <!--  Row 3: Riot and Rockstar  -->
                <Image
                    Grid.Row="2"
                    Grid.Column="0"
                    Width="40"
                    Height="40"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Source="/Assets/Launcher Logos/RiotLogo750px.png"
                    Stretch="Uniform" />
                <TextBlock
                    Grid.Row="2"
                    Grid.Column="1"
                    Margin="4,0,16,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="20"
                    Text="{x:Bind RiotCount, Mode=OneWay}" />
                <Image
                    Grid.Row="2"
                    Grid.Column="2"
                    Width="40"
                    Height="40"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Source="/Assets/Launcher Logos/RockstarLogo128px.png"
                    Stretch="Uniform" />
                <TextBlock
                    Grid.Row="2"
                    Grid.Column="3"
                    Margin="4,0,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="20"
                    Text="{x:Bind RockstarCount, Mode=OneWay}" />

                <!--  Row 4: Steam and Ubisoft  -->
                <Image
                    Grid.Row="3"
                    Grid.Column="0"
                    Width="40"
                    Height="40"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Source="/Assets/Launcher Logos/SteamLogo512px.png"
                    Stretch="Uniform" />
                <TextBlock
                    Grid.Row="3"
                    Grid.Column="1"
                    Margin="4,0,16,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="20"
                    Text="{x:Bind SteamCount, Mode=OneWay}" />
                <Image
                    Grid.Row="3"
                    Grid.Column="2"
                    Width="40"
                    Height="40"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Source="/Assets/Launcher Logos/UbisoftLogo96px.png"
                    Stretch="Uniform" />
                <TextBlock
                    Grid.Row="3"
                    Grid.Column="3"
                    Margin="4,0,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="20"
                    Text="{x:Bind UbisoftCount, Mode=OneWay}" />

                <!--  Row 5: Xbox and Manual  -->
                <Image
                    Grid.Row="4"
                    Grid.Column="0"
                    Width="40"
                    Height="40"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Source="/Assets/Launcher Logos/XboxLogo512.png"
                    Stretch="Uniform" />
                <TextBlock
                    Grid.Row="4"
                    Grid.Column="1"
                    Margin="4,0,16,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="20"
                    Text="{x:Bind XboxCount, Mode=OneWay}" />
                <TextBlock
                    Grid.Row="4"
                    Grid.Column="2"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="32"
                    Foreground="White"
                    Text="&#xED25;" />
                <TextBlock
                    Grid.Row="4"
                    Grid.Column="3"
                    Margin="4,0,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="20"
                    Text="{x:Bind ManualCount, Mode=OneWay}" />
            </Grid>

            <!--  Last Updated Text  -->
            <TextBlock
                x:Name="LastUpdatedTextBlock"
                HorizontalAlignment="Center"
                x:FieldModifier="public"
                Style="{StaticResource SettingsDescriptionStyle}"
                Text="{x:Bind LastUpdatedText, Mode=OneWay}" />



            <Border
                x:Name="ResetButtonBorder"
                HorizontalAlignment="Center"
                BorderBrush="{x:Bind ResetButtonFocusBrush, Mode=OneWay}"
                BorderThickness="2"
                CornerRadius="10">
                <Button
                    x:Name="ResetDatabaseButton"
                    MinWidth="75"
                    MinHeight="40"
                    Padding="10"
                    x:FieldModifier="public"
                    Background="#4A4A4A"
                    BorderBrush="#666666"
                    BorderThickness="1"
                    Content="Reset"
                    CornerRadius="10" />
            </Border>
        </StackPanel>

        <!--  SteamGridDB API Key Section  -->
        <Border
            Margin="0,10,0,0"
            Padding="15"
            Background="#22FFFFFF"
            CornerRadius="12">
            <StackPanel Spacing="12">
                <TextBlock
                    FontWeight="SemiBold"
                    Foreground="#CCFFFFFF"
                    IsTabStop="False"
                    Text="SteamGridDB Artwork" />

                <TextBlock
                    Foreground="#99FFFFFF"
                    IsTabStop="False"
                    Style="{StaticResource SettingsDescriptionStyle}"
                    Text="Enter your SteamGridDB API key to fetch images from within HUDRA."
                    TextWrapping="Wrap" />

                <Grid ColumnSpacing="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Border
                        x:Name="SgdbApiKeyBorder"
                        BorderBrush="{x:Bind SgdbApiKeyFocusBrush, Mode=OneWay}"
                        BorderThickness="2"
                        CornerRadius="6">
                        <PasswordBox
                            x:Name="SgdbApiKeyBox"
                            x:FieldModifier="public"
                            MaxLength="32"
                            PasswordRevealMode="Peek"
                            PlaceholderText="Paste your API key here" />
                    </Border>

                    <StackPanel
                        Grid.Column="1"
                        Orientation="Horizontal"
                        Spacing="8">
                        <FontIcon
                            x:Name="KeyValidationIcon"
                            VerticalAlignment="Center"
                            FontFamily="Segoe MDL2 Assets"
                            FontSize="16"
                            Foreground="{ThemeResource SystemFillColorSuccessBrush}"
                            Glyph="&#xE73E;"
                            Visibility="Collapsed" />
                        <Border
                            x:Name="ClearKeyButtonBorder"
                            BorderBrush="{x:Bind ClearKeyButtonFocusBrush, Mode=OneWay}"
                            BorderThickness="2"
                            CornerRadius="6"
                            Visibility="Collapsed">
                            <Button
                                x:Name="ClearKeyButton"
                                Width="40"
                                Height="40"
                                CornerRadius="6">
                                <FontIcon
                                    FontFamily="Segoe MDL2 Assets"
                                    FontSize="16"
                                    Foreground="#FF6B6B"
                                    Glyph="&#xE74D;" />
                            </Button>
                        </Border>
                    </StackPanel>
                </Grid>

                <Border
                    x:Name="SgdbLinkButtonBorder"
                    HorizontalAlignment="Left"
                    BorderBrush="{x:Bind SgdbLinkButtonFocusBrush, Mode=OneWay}"
                    BorderThickness="2"
                    CornerRadius="6">
                    <HyperlinkButton x:Name="SgdbLinkButton" Padding="8,4">
                        <TextBlock
                            HorizontalAlignment="Center"
                            Foreground="#90CAF9"
                            TextWrapping="Wrap">
                            Get your free API key from SteamGridDB<Hyperlink>â†—</Hyperlink>
                        </TextBlock>
                    </HyperlinkButton>
                </Border>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>
