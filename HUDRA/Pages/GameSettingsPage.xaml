<Page
    x:Class="HUDRA.Pages.GameSettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:HUDRA.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:HUDRA.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Margin="0">
        <StackPanel
            x:Name="RootPanel"
            MaxWidth="320"
            Margin="0,15,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            x:FieldModifier="public"
            Spacing="15">

            <!--  Header with Back Button  -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  Back Button with focus border  -->
                <Border
                    Grid.Column="0"
                    BorderBrush="{x:Bind BackButtonFocusBrush, Mode=OneWay}"
                    BorderThickness="2"
                    CornerRadius="6">
                    <Button
                        x:Name="BackButton"
                        Width="40"
                        Height="40"
                        x:FieldModifier="public"
                        Click="BackButton_Click"
                        IsTabStop="False"
                        UseSystemFocusVisuals="False">
                        <FontIcon
                            FontFamily="Segoe MDL2 Assets"
                            FontSize="16"
                            Glyph="&#xE76B;" />
                    </Button>
                </Border>

                <!--  Page Title  -->
                <TextBlock
                    Grid.Column="1"
                    Margin="10,0,0,0"
                    VerticalAlignment="Center"
                    FontFamily="Cascadia Code"
                    FontSize="18"
                    FontWeight="SemiBold"
                    Text="GAME SETTINGS" />
            </Grid>

            <!--  Display Name Section  -->
            <StackPanel Margin="0,0,0,15" Spacing="10">
                <TextBlock
                    FontFamily="Cascadia Code"
                    FontSize="16"
                    Foreground="#FFFFFF"
                    Text="Display Name" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!--  Display Name TextBox (3/4 width)  -->
                    <Border
                        Grid.Column="0"
                        Margin="0,0,10,0"
                        BorderBrush="{x:Bind DisplayNameFocusBrush, Mode=OneWay}"
                        BorderThickness="2"
                        CornerRadius="6">
                        <TextBox
                            x:Name="DisplayNameTextBox"
                            MaxLength="100"
                            PlaceholderText="Enter game name"
                            UseSystemFocusVisuals="False" />
                    </Border>

                    <!--  Delete Button (matching Back button style)  -->
                    <Border
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        BorderBrush="{x:Bind DeleteButtonFocusBrush, Mode=OneWay}"
                        BorderThickness="2"
                        CornerRadius="6">
                        <Button
                            x:Name="DeleteButton"
                            Width="40"
                            Height="40"
                            Click="DeleteButton_Click"
                            IsTabStop="False"
                            UseSystemFocusVisuals="False">
                            <FontIcon
                                FontFamily="Segoe MDL2 Assets"
                                FontSize="16"
                                Foreground="#FF6B6B"
                                Glyph="&#xE74D;" />
                        </Button>
                    </Border>
                </Grid>
                <TextBlock
                    x:Name="DisplayNameErrorText"
                    FontFamily="Cascadia Code"
                    FontSize="10"
                    Foreground="#FF6B6B"
                    Visibility="Collapsed" />
            </StackPanel>

            <!--  Artwork Section  -->
            <StackPanel Margin="0,0,0,15" Spacing="8">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!--  Artwork Preview  -->
                    <TextBlock
                        HorizontalAlignment="Left"
                        FontFamily="Cascadia Code"
                        FontSize="16"
                        Foreground="#FFFFFF"
                        Text="Artwork" />
                    <Border
                        Grid.Column="0"
                        Width="125"
                        Height="82"
                        Margin="0,30,10,0"
                        VerticalAlignment="Center"
                        Background="#2d2d2d"
                        CornerRadius="12">

                        <Image x:Name="ArtworkPreview" Stretch="UniformToFill" />
                    </Border>

                    <!--  Buttons  -->
                    <StackPanel
                        Grid.Column="1"
                        Margin="0,30,0,0"
                        HorizontalAlignment="Center"
                        Spacing="8">

                        <!--  Browse Button  -->
                        <Border
                            BorderBrush="{x:Bind BrowseButtonFocusBrush, Mode=OneWay}"
                            BorderThickness="2"
                            CornerRadius="6">
                            <Button
                                x:Name="BrowseButton"
                                Width="125"
                                Height="36"
                                Click="BrowseButton_Click"
                                Content="Browse..."
                                IsTabStop="False"
                                UseSystemFocusVisuals="False" />
                        </Border>

                        <!--  SteamGridDB Button  -->
                        <Border
                            BorderBrush="{x:Bind SgdbButtonFocusBrush, Mode=OneWay}"
                            BorderThickness="2"
                            CornerRadius="6">
                            <Button
                                x:Name="SteamGridDbButton"
                                Width="125"
                                Height="36"
                                Click="SteamGridDbButton_Click"
                                Content="SteamGridDB..."
                                IsTabStop="False"
                                UseSystemFocusVisuals="False" />
                        </Border>
                    </StackPanel>
                </Grid>

                <TextBlock
                    x:Name="ArtworkErrorText"
                    FontFamily="Cascadia Code"
                    FontSize="10"
                    Foreground="#FF6B6B"
                    Visibility="Collapsed" />
            </StackPanel>

            <!--  SteamGridDB Results Section (Collapsed by default)  -->
            <Border
                x:Name="SgdbResultsSection"
                Width="280"
                Padding="0,10,0,10"
                Background="#2d2d2d"
                CornerRadius="12"
                Visibility="Collapsed">
                <StackPanel Spacing="10">
                    <!--  Loading Indicator  -->
                    <StackPanel
                        x:Name="SgdbLoadingIndicator"
                        Padding="20"
                        HorizontalAlignment="Center"
                        Orientation="Vertical"
                        Spacing="15"
                        Visibility="Collapsed">
                        <ProgressRing
                            Width="40"
                            Height="40"
                            HorizontalAlignment="Center"
                            Foreground="DarkViolet"
                            IsActive="True" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontFamily="Cascadia Code"
                            FontSize="16"
                            Foreground="#FFFFFF"
                            Text="Loading top 10 grids from SteamGridDB..."
                            TextAlignment="Center"
                            TextWrapping="Wrap" />
                    </StackPanel>

                    <!--  Error Message  -->
                    <TextBlock
                        x:Name="SgdbErrorText"
                        HorizontalAlignment="Center"
                        FontFamily="Cascadia Code"
                        FontSize="11"
                        Foreground="#FF6B6B"
                        TextAlignment="Center"
                        TextWrapping="Wrap"
                        Visibility="Collapsed" />

                    <!--  Image Grid  -->
                    <ItemsControl x:Name="SgdbImageGrid">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <ItemsWrapGrid
                                    HorizontalAlignment="Center"
                                    MaximumRowsOrColumns="2"
                                    Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border
                                    Width="125"
                                    Height="82"
                                    Margin="5"
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                    BorderThickness="2"
                                    CornerRadius="8">
                                    <Button
                                        Padding="0"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Click="SgdbImage_Click"
                                        CornerRadius="8"
                                        IsTabStop="False"
                                        Tag="{Binding}">
                                        <Image Source="{Binding TempFilePath}" Stretch="UniformToFill" />
                                    </Button>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <!--  Game Profile Section (Expander)  -->
            <controls:NavigableExpander
                x:Name="GameProfileExpander"
                Margin="0,5,0,0"
                HorizontalAlignment="Stretch">
                <controls:NavigableExpander.Header>
                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                        <FontIcon
                            VerticalAlignment="Center"
                            FontFamily="Segoe MDL2 Assets"
                            FontSize="16"
                            Glyph="&#xE771;" />
                        <TextBlock
                            Margin="8,0,0,0"
                            VerticalAlignment="Center"
                            FontFamily="Cascadia Code"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Text="Game Profile" />
                    </StackPanel>
                </controls:NavigableExpander.Header>
                <controls:NavigableExpander.Body>
                    <controls:GameProfileControl x:Name="GameProfileControl" />
                </controls:NavigableExpander.Body>
            </controls:NavigableExpander>

        </StackPanel>
    </Grid>
</Page>
