<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="HUDRA.Controls.GameDetectionControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:HUDRA.Controls"
    xmlns:ap="using:HUDRA.AttachedProperties"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    ap:GamepadNavigation.IsEnabled="True"
    ap:GamepadNavigation.NavigationGroup="MainControls"
    ap:GamepadNavigation.NavigationOrder="1">

    <UserControl.Resources>
        <controls:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <StackPanel
        Margin="0,20,0,20"
        Padding="25,0,25,0"
        Spacing="15">
        <Border
            x:Name="LibraryScanningBorder"
            Padding="20,5"
            Background="#22FFFFFF"
            CornerRadius="12"
            BorderBrush="{x:Bind LibraryScanningFocusBrush, Mode=OneWay}"
            BorderThickness="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*" />
                    <ColumnDefinition Width="1.2*" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    Style="{StaticResource SettingsLabelStyle}"
                    Text="Library Scanning" />

                <ToggleSwitch
                    x:Name="EnhancedLibraryScanningToggle"
                    Grid.Row="0"
                    Grid.Column="1"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    x:FieldModifier="public" />
            </Grid>
        </Border>

        <Border
            x:Name="ScanIntervalBorder"
            Padding="10"
            Background="#22FFFFFF"
            CornerRadius="12"
            BorderBrush="Transparent"
            BorderThickness="0">
            <StackPanel Spacing="8">
                <TextBlock
                    HorizontalAlignment="Center"
                    FontWeight="SemiBold"
                    Foreground="#CCFFFFFF"
                    Text="Scan Interval" />

                <Border
                    CornerRadius="6"
                    BorderBrush="{x:Bind ScanIntervalFocusBrush, Mode=OneWay}"
                    BorderThickness="2">
                    <ComboBox
                        x:Name="ScanIntervalComboBox"
                        HorizontalAlignment="Stretch"
                        x:FieldModifier="public"
                        IsEnabled="{x:Bind EnhancedLibraryScanningToggle.IsOn, Mode=OneWay}"
                        UseSystemFocusVisuals="False"
                        IsTabStop="False"
                        ItemContainerStyle="{StaticResource HudraComboBoxItemStyle}"
                        Style="{StaticResource HudraComboBoxStyle}">
                        <ComboBoxItem Content="5 mins" Tag="5" />
                        <ComboBoxItem Content="15 mins" Tag="15" />
                        <ComboBoxItem Content="30 mins" Tag="30" />
                        <ComboBoxItem Content="60 mins" Tag="60" />
                    </ComboBox>
                </Border>
            </StackPanel>
        </Border>

        <TextBlock Style="{StaticResource SettingsDescriptionStyle}">Automatically scans games from Steam, GOG, Epic, Xbox, and more for faster and more accurate game detection.</TextBlock>

        <StackPanel Spacing="8" Visibility="{x:Bind EnhancedLibraryScanningToggle.IsOn, Mode=OneWay}">
            <TextBlock
                HorizontalAlignment="Center"
                Style="{StaticResource SettingsLabelStyle}"
                Text="Library Stats" />

            <!-- Visual Library Stats Grid -->
            <Grid HorizontalAlignment="Center" RowSpacing="8" ColumnSpacing="12" Margin="0,8,0,8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Row 1: Battle.Net and Epic -->
                <Image Grid.Row="0" Grid.Column="0" Source="/Assets/Launcher Logos/BattleNetLogo128px.png"
                       Width="40" Height="40" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center" />
                <TextBlock Grid.Row="0" Grid.Column="1" Text="{x:Bind BattleNetCount, Mode=OneWay}"
                           FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="4,0,16,0" />
                <Image Grid.Row="0" Grid.Column="2" Source="/Assets/Launcher Logos/EpicLogo128px.png"
                       Width="40" Height="40" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center" />
                <TextBlock Grid.Row="0" Grid.Column="3" Text="{x:Bind EpicCount, Mode=OneWay}"
                           FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="4,0,0,0" />

                <!-- Row 2: GOG and Origin -->
                <Image Grid.Row="1" Grid.Column="0" Source="/Assets/Launcher Logos/GOGLogo128px.png"
                       Width="40" Height="40" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center" />
                <TextBlock Grid.Row="1" Grid.Column="1" Text="{x:Bind GOGCount, Mode=OneWay}"
                           FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="4,0,16,0" />
                <Image Grid.Row="1" Grid.Column="2" Source="/Assets/Launcher Logos/OriginLogo256px.png"
                       Width="40" Height="40" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center" />
                <TextBlock Grid.Row="1" Grid.Column="3" Text="{x:Bind OriginCount, Mode=OneWay}"
                           FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="4,0,0,0" />

                <!-- Row 3: Riot and Rockstar -->
                <Image Grid.Row="2" Grid.Column="0" Source="/Assets/Launcher Logos/RiotLogo750px.png"
                       Width="40" Height="40" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center" />
                <TextBlock Grid.Row="2" Grid.Column="1" Text="{x:Bind RiotCount, Mode=OneWay}"
                           FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="4,0,16,0" />
                <Image Grid.Row="2" Grid.Column="2" Source="/Assets/Launcher Logos/RockstarLogo128px.png"
                       Width="40" Height="40" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center" />
                <TextBlock Grid.Row="2" Grid.Column="3" Text="{x:Bind RockstarCount, Mode=OneWay}"
                           FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="4,0,0,0" />

                <!-- Row 4: Steam and Ubisoft -->
                <Image Grid.Row="3" Grid.Column="0" Source="/Assets/Launcher Logos/SteamLogo512px.png"
                       Width="40" Height="40" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center" />
                <TextBlock Grid.Row="3" Grid.Column="1" Text="{x:Bind SteamCount, Mode=OneWay}"
                           FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="4,0,16,0" />
                <Image Grid.Row="3" Grid.Column="2" Source="/Assets/Launcher Logos/UbisoftLogo96px.png"
                       Width="40" Height="40" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center" />
                <TextBlock Grid.Row="3" Grid.Column="3" Text="{x:Bind UbisoftCount, Mode=OneWay}"
                           FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="4,0,0,0" />

                <!-- Row 5: Xbox (centered with column span) -->
                <Image Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Source="/Assets/Launcher Logos/XboxLogo512.png"
                       Width="40" Height="40" Stretch="Uniform" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,4,0" />
                <TextBlock Grid.Row="4" Grid.Column="2" Grid.ColumnSpan="2" Text="{x:Bind XboxCount, Mode=OneWay}"
                           FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="4,0,0,0" />
            </Grid>

            <!-- Last Updated Text -->
            <TextBlock
                x:Name="LastUpdatedTextBlock"
                x:FieldModifier="public"
                Text="{x:Bind LastUpdatedText, Mode=OneWay}"
                Style="{StaticResource SettingsDescriptionStyle}"
                HorizontalAlignment="Center" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10">
                <Border
                    x:Name="RefreshButtonBorder"
                    CornerRadius="10"
                    BorderBrush="{x:Bind RefreshButtonFocusBrush, Mode=OneWay}"
                    BorderThickness="2">
                    <Button
                        x:Name="RefreshDatabaseButton"
                        x:FieldModifier="public"
                        MinWidth="75"
                        MinHeight="40"
                        Padding="10"
                        Background="#4A4A4A"
                        BorderBrush="#666666"
                        BorderThickness="1"
                        UseSystemFocusVisuals="False"
                        IsTabStop="False"
                        Content="Re-Scan"
                        CornerRadius="10" />
                </Border>

                <Border
                    x:Name="ResetButtonBorder"
                    CornerRadius="10"
                    BorderBrush="{x:Bind ResetButtonFocusBrush, Mode=OneWay}"
                    BorderThickness="2">
                    <Button
                        x:Name="ResetDatabaseButton"
                        x:FieldModifier="public"
                        MinWidth="75"
                        MinHeight="40"
                        Padding="10"
                        Background="#4A4A4A"
                        BorderBrush="#666666"
                        BorderThickness="1"
                        UseSystemFocusVisuals="False"
                        IsTabStop="False"
                        Content="Reset"
                        CornerRadius="10" />
                </Border>
            </StackPanel>
        </StackPanel>
    </StackPanel>
</UserControl>
