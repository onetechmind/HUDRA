<Page
    x:Class="HUDRA.Pages.LibraryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:HUDRA.Models"
    xmlns:local="using:HUDRA.Pages"
    mc:Ignorable="d">

    <Page.Resources>
        <!-- Value Converters -->
        <local:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
        <local:InvertedNullToVisibilityConverter x:Key="InvertedNullToVisibilityConverter" />

        <!-- Game Tile Style -->
        <Style x:Key="GameTileButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2d2d2d" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="VerticalAlignment" Value="Stretch" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="VerticalContentAlignment" Value="Stretch" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="ButtonBorder"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{TemplateBinding CornerRadius}">
                            <ContentPresenter
                                x:Name="ContentPresenter"
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                Content="{TemplateBinding Content}" />

                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal" />
                                    <VisualState x:Name="PointerOver">
                                        <Storyboard>
                                            <ColorAnimation
                                                Storyboard.TargetName="ButtonBorder"
                                                Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                To="#454545"
                                                Duration="0:0:0.1" />
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Pressed">
                                        <Storyboard>
                                            <ColorAnimation
                                                Storyboard.TargetName="ButtonBorder"
                                                Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                To="#670195"
                                                Duration="0:0:0.05" />
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Margin="0">
        <StackPanel
            x:Name="LibraryRootPanel"
            MaxWidth="320"
            Margin="0,15,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Spacing="20">

            <!-- Header -->
            <Border>
                <TextBlock
                    Padding="0,15,0,0"
                    HorizontalAlignment="Center"
                    FontFamily="Cascadia Code"
                    FontSize="18"
                    FontWeight="SemiBold"
                    IsTabStop="False"
                    Text="LIBRARY" />
            </Border>

            <!-- Launching Indicator -->
            <Border
                x:Name="LaunchingIndicator"
                Padding="15"
                HorizontalAlignment="Center"
                Background="#670195"
                CornerRadius="12"
                Visibility="Collapsed">
                <TextBlock
                    x:Name="LaunchingText"
                    HorizontalAlignment="Center"
                    FontFamily="Cascadia Code"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Foreground="White"
                    Text="Launching..." />
            </Border>

            <!-- Game Grid -->
            <ItemsControl
                x:Name="GamesItemsControl"
                HorizontalAlignment="Center">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Spacing="15" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate x:DataType="models:DetectedGame">
                        <StackPanel Spacing="8">
                            <!-- Game Tile Button -->
                            <Button
                                Width="280"
                                Height="180"
                                Click="GameTile_Click"
                                Style="{StaticResource GameTileButtonStyle}"
                                Tag="{x:Bind}">
                                <Grid>
                                    <!-- Artwork Image -->
                                    <Image
                                        x:Name="ArtworkImage"
                                        Stretch="UniformToFill"
                                        Visibility="{x:Bind ArtworkPath, Converter={StaticResource NullToVisibilityConverter}}"
                                        Source="{x:Bind ArtworkPath, Mode=OneWay}" />

                                    <!-- Fallback: Game Name in Styled Box -->
                                    <Border
                                        Background="#1A1A1A"
                                        Visibility="{x:Bind ArtworkPath, Converter={StaticResource InvertedNullToVisibilityConverter}}">
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontFamily="Cascadia Code"
                                            FontSize="16"
                                            FontWeight="SemiBold"
                                            Foreground="White"
                                            Text="{x:Bind DisplayName, Mode=OneWay}"
                                            TextAlignment="Center"
                                            TextWrapping="Wrap"
                                            Padding="10" />
                                    </Border>
                                </Grid>
                            </Button>

                            <!-- Game Name Below Tile -->
                            <TextBlock
                                Width="280"
                                HorizontalAlignment="Center"
                                FontFamily="Cascadia Code"
                                FontSize="13"
                                Foreground="White"
                                Text="{x:Bind DisplayName, Mode=OneWay}"
                                TextAlignment="Center"
                                TextTrimming="CharacterEllipsis"
                                MaxLines="2" />
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Empty State -->
            <Border
                x:Name="EmptyStatePanel"
                Padding="20"
                HorizontalAlignment="Center"
                Background="#2d2d2d"
                CornerRadius="12"
                Visibility="Collapsed">
                <StackPanel Spacing="10">
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontFamily="Cascadia Code"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Foreground="White"
                        Text="No games found" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontFamily="Calibri"
                        FontSize="13"
                        Foreground="#99FFFFFF"
                        Text="Enable Enhanced Library Scanning in Settings"
                        TextAlignment="Center"
                        TextWrapping="Wrap" />
                </StackPanel>
            </Border>

        </StackPanel>
    </Grid>
</Page>
