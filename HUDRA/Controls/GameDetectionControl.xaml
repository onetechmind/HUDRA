<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="HUDRA.Controls.GameDetectionControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:HUDRA.Controls"
    xmlns:ap="using:HUDRA.AttachedProperties"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    ap:GamepadNavigation.IsEnabled="True"
    ap:GamepadNavigation.NavigationGroup="MainControls"
    ap:GamepadNavigation.NavigationOrder="1">

    <UserControl.Resources>
        <controls:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <StackPanel
        Margin="0,20,0,20"
        Padding="5"
        Spacing="15">
        <Border
            x:Name="LibraryScanningBorder"
            Padding="20,5"
            Background="#22FFFFFF"
            CornerRadius="12"
            BorderBrush="{x:Bind LibraryScanningFocusBrush, Mode=OneWay}"
            BorderThickness="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*" />
                    <ColumnDefinition Width="1.2*" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    Style="{StaticResource SettingsLabelStyle}"
                    Text="Library Scanning" />

                <ToggleSwitch
                    x:Name="EnhancedLibraryScanningToggle"
                    Grid.Row="0"
                    Grid.Column="1"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    x:FieldModifier="public" />
            </Grid>
        </Border>

        <Border
            x:Name="ScanIntervalBorder"
            Padding="10"
            Background="#22FFFFFF"
            CornerRadius="12"
            BorderBrush="Transparent"
            BorderThickness="0">
            <StackPanel Spacing="8">
                <TextBlock
                    HorizontalAlignment="Center"
                    FontWeight="SemiBold"
                    Foreground="#CCFFFFFF"
                    Text="Scan Interval" />

                <Border
                    CornerRadius="6"
                    BorderBrush="{x:Bind ScanIntervalFocusBrush, Mode=OneWay}"
                    BorderThickness="2">
                    <ComboBox
                        x:Name="ScanIntervalComboBox"
                        HorizontalAlignment="Stretch"
                        x:FieldModifier="public"
                        IsEnabled="{x:Bind EnhancedLibraryScanningToggle.IsOn, Mode=OneWay}"
                        UseSystemFocusVisuals="False"
                        IsTabStop="False"
                        ItemContainerStyle="{StaticResource HudraComboBoxItemStyle}"
                        Style="{StaticResource HudraComboBoxStyle}">
                        <ComboBoxItem Content="5 mins" Tag="5" />
                        <ComboBoxItem Content="15 mins" Tag="15" />
                        <ComboBoxItem Content="30 mins" Tag="30" />
                        <ComboBoxItem Content="60 mins" Tag="60" />
                    </ComboBox>
                </Border>
            </StackPanel>
        </Border>

        <TextBlock Style="{StaticResource SettingsDescriptionStyle}">Automatically scans games from Steam, GOG, Epic, Xbox, and more for faster and more accurate game detection.</TextBlock>

        <StackPanel Spacing="8" Visibility="{x:Bind EnhancedLibraryScanningToggle.IsOn, Mode=OneWay}">
            <TextBlock
                HorizontalAlignment="Center"
                Style="{StaticResource SettingsLabelStyle}"
                Text="Library Stats" />

            <TextBlock
                x:Name="DatabaseStatusText"
                x:FieldModifier="public"
                Style="{StaticResource SettingsDescriptionStyle}"
                Text="Loading database information..." />

            <Border
                x:Name="RefreshButtonBorder"
                HorizontalAlignment="Center"
                CornerRadius="10"
                BorderBrush="{x:Bind RefreshButtonFocusBrush, Mode=OneWay}"
                BorderThickness="2">
                <Button
                    x:Name="RefreshDatabaseButton"
                    x:FieldModifier="public"
                    MinWidth="75"
                    MinHeight="25"
                    Padding="10"
                    Background="#4A4A4A"
                    BorderBrush="#666666"
                    BorderThickness="1"
                    UseSystemFocusVisuals="False"
                    IsTabStop="False"
                    Content="Re-Scan"
                    CornerRadius="10" />
            </Border>
        </StackPanel>
    </StackPanel>
</UserControl>
