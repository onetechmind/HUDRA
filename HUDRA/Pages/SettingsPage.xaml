<Page
    x:Class="HUDRA.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:HUDRA.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Margin="0">
        <StackPanel
            MaxWidth="280"
            Margin="0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Spacing="15">

            <Border>
                <TextBlock
                    Padding="0,15,0,0"
                    HorizontalAlignment="Center"
                    FontFamily="Cascadia Code"
                    FontSize="18"
                    FontWeight="SemiBold"
                    Text="SETTINGS" />
            </Border>

            <Border
                Padding="20,5"
                Background="#22FFFFFF"
                CornerRadius="12">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="4*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        Style="{StaticResource SettingsLabelStyle}"
                        Text="Use Default TDP" />

                    <ToggleSwitch
                        x:Name="UseStartupTdpToggle"
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        x:FieldModifier="public"
                        Toggled="UseStartupTdpToggle_Toggled" />

                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Style="{StaticResource SettingsDescriptionStyle}"
                        Text="When on, HUDRA will start with TDP selected below." />
                </Grid>
            </Border>

            <StackPanel>
                <controls:TdpPickerControl
                    x:Name="StartupTdpPicker"
                    x:FieldModifier="public"
                    ShowLabel="False" />
            </StackPanel>

            <!--  Sticky TDP setting  -->
            <Border
                Padding="20,5"
                Background="#22FFFFFF"
                CornerRadius="12">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>


                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        Style="{StaticResource SettingsLabelStyle}"
                        Text="Sticky TDP" />

                    <ToggleSwitch
                        x:Name="TdpCorrectionToggle"
                        Grid.Column="1"
                        Margin="10,0,0,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        x:FieldModifier="public"
                        Toggled="TdpCorrectionToggle_Toggled" />

                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Style="{StaticResource SettingsDescriptionStyle}"
                        Text="Custom TDP will be less affected by external forces." />
                </Grid>

            </Border>

            <Rectangle Style="{StaticResource HudraHorizontalRule}" />

            <!--  Power Profile Control  -->
            <Border
                Padding="20,10"
                Background="#22FFFFFF"
                CornerRadius="12">
                <StackPanel Spacing="8">
                    <TextBlock
                        Padding="10"
                        HorizontalAlignment="Center"
                        Style="{StaticResource SettingsLabelStyle}"
                        Text="Windows Power Profile" />
                    <controls:PowerProfileControl x:Name="PowerProfileControl" x:FieldModifier="public" />
                </StackPanel>
            </Border>

            <!--  Game Detection Settings  -->
            <Expander
                Width="280"
                Padding="5"
                CornerRadius="12">
                <Expander.Header>
                    <TextBlock
                        VerticalAlignment="Center"
                        FontFamily="Cascadia Code"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Text="Game Detection" />
                </Expander.Header>
                <Border Margin="0,20,0,20" CornerRadius="12">

                    <StackPanel Spacing="8">
                        <Border
                            Margin="0,10,0,10"
                            Padding="10,5,10,5"
                            Background="#22FFFFFF"
                            CornerRadius="12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="4*" />
                                    <ColumnDefinition Width="1*" />
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    Style="{StaticResource SettingsLabelStyle}"
                                    Text="Library Scanning" />

                                <ToggleSwitch
                                    x:Name="EnhancedLibraryScanningToggle"
                                    Grid.Column="1"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    x:FieldModifier="public"
                                    Toggled="EnhancedLibraryScanningToggle_Toggled" />

                            </Grid>
                        </Border>

                        <TextBlock
                            Margin="0"
                            HorizontalAlignment="Center"
                            FontWeight="SemiBold"
                            Foreground="#CCFFFFFF"
                            Text="Scan Interval" />

                        <ComboBox
                            x:Name="ScanIntervalComboBox"
                            HorizontalAlignment="Stretch"
                            x:FieldModifier="public"
                            IsEnabled="{x:Bind EnhancedLibraryScanningToggle.IsOn, Mode=OneWay}"
                            ItemContainerStyle="{StaticResource HudraComboBoxItemStyle}"
                            SelectionChanged="ScanIntervalComboBox_SelectionChanged"
                            Style="{StaticResource HudraComboBoxStyle}">
                            <ComboBoxItem Content="5 mins" Tag="5" />
                            <ComboBoxItem Content="15 mins" Tag="15" />
                            <ComboBoxItem Content="30 mins" Tag="30" />
                            <ComboBoxItem Content="60 mins" Tag="60" />
                        </ComboBox>

                        <TextBlock
                            Padding="0,10"
                            Style="{StaticResource SettingsDescriptionStyle}"
                            Text="Automatically scans installed games from major launchers (Steam, Epic Games, Xbox, GOG, etc.) for faster and more accurate game detection." />

                        <!--  Game Database Status  -->

                        <TextBlock
                            Padding="0"
                            HorizontalAlignment="Center"
                            Style="{StaticResource SettingsLabelStyle}"
                            Text="Library Stats"
                            Visibility="{x:Bind EnhancedLibraryScanningToggle.IsOn, Mode=OneWay}" />

                        <TextBlock
                            x:Name="DatabaseStatusText"
                            Style="{StaticResource SettingsDescriptionStyle}"
                            Text="Loading database information..."
                            Visibility="{x:Bind EnhancedLibraryScanningToggle.IsOn, Mode=OneWay}" />

                        <Button
                            x:Name="RefreshDatabaseButton"
                            MinWidth="75"
                            MinHeight="25"
                            Margin="10,0,0,10"
                            Padding="10"
                            HorizontalAlignment="Center"
                            Background="#4A4A4A"
                            BorderBrush="#666666"
                            BorderThickness="1"
                            Click="RefreshDatabaseButton_Click"
                            Content="Re-Scan"
                            CornerRadius="10"
                            Visibility="{x:Bind EnhancedLibraryScanningToggle.IsOn, Mode=OneWay}" />
                    </StackPanel>
                </Border>
            </Expander>
            <!--  Clean Settings UI for Startup - Task Scheduler Only  -->
            <Border
                Padding="20,5"
                Background="#22FFFFFF"
                CornerRadius="12">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="4*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>

                    <!--  Startup Toggle  -->
                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        Style="{StaticResource SettingsLabelStyle}"
                        Text="Start with Windows" />

                    <ToggleSwitch
                        x:Name="StartupToggle"
                        Grid.Row="0"
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Toggled="StartupToggle_Toggled" />

                    <!--  Description  -->
                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Margin="0,5,0,15"
                        Style="{StaticResource SettingsDescriptionStyle}"
                        Text="Automatically launch HUDRA with admin privileges when Windows starts." />

                    <!--  Minimize Toggle  -->
                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="0"
                        Style="{StaticResource SettingsLabelStyle}"
                        Text="Start Minimized" />

                    <ToggleSwitch
                        x:Name="MinimizeOnStartupToggle"
                        Grid.Row="2"
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Toggled="MinimizeOnStartupToggle_Toggled" />

                    <TextBlock
                        Grid.Row="3"
                        Grid.ColumnSpan="2"
                        Margin="0,5,0,15"
                        Style="{StaticResource SettingsDescriptionStyle}"
                        Text="Enable to start HUDRA minimized to tray." />

                    <!--  RTSS Auto-Start Toggle  -->
                    <TextBlock
                        Grid.Row="5"
                        Grid.Column="0"
                        Style="{StaticResource SettingsLabelStyle}"
                        Text="Auto-Start RTSS" />

                    <ToggleSwitch
                        x:Name="StartRtssWithHudraToggle"
                        Grid.Row="5"
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Toggled="StartRtssWithHudraToggle_Toggled" />

                    <TextBlock
                        Grid.Row="6"
                        Grid.ColumnSpan="2"
                        Margin="0,5,0,15"
                        Style="{StaticResource SettingsDescriptionStyle}"
                        Text="Automatically start RivaTuner Statistics Server with HUDRA for FPS Limiting." />

                    <!--  Hide/Show Hotkey  -->
                    <TextBlock
                        Grid.Row="7"
                        Grid.Column="0"
                        Style="{StaticResource SettingsLabelStyle}"
                        Text="Hide/Show Hotkey" />

                    <controls:HotkeySelector
                        x:Name="HideShowHotkeySelector"
                        Grid.Row="8"
                        Grid.ColumnSpan="2"
                        Margin="0,5,0,15"
                        HotkeyChanged="HideShowHotkeySelector_HotkeyChanged" />
                </Grid>
            </Border>
        </StackPanel>
    </Grid>
</Page>