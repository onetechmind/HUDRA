<UserControl
    x:Class="HUDRA.Pages.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:HUDRA.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel x:Name="RootPanel"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Spacing="20"
                Margin="0,50,0,0">
        <controls:TdpPickerControl x:Name="TdpPicker" x:FieldModifier="public" />
        <controls:ResolutionPickerControl x:Name="ResolutionPicker" x:FieldModifier="public" />
        <controls:AudioControlsControl x:Name="AudioControls" x:FieldModifier="public" />
        <controls:BrightnessControlControl x:Name="BrightnessControls" x:FieldModifier="public" />
    </StackPanel>
</UserControl>
