<Page
    x:Class="HUDRA.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:HUDRA.Controls"
    mc:Ignorable="d">

    <Grid Margin="0">
        <StackPanel Spacing="15" MaxWidth="280" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,50,0,0">

            <Border Background="#22FFFFFF" CornerRadius="12" Padding="20,5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="4*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Use Default TDP"
                               Style="{StaticResource SettingsLabelStyle}"
                               Grid.Column="0"
                               Grid.Row="0" />

                    <ToggleSwitch x:Name="UseStartupTdpToggle"
                                  x:FieldModifier="public"
                                  Grid.Column="1"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Right"
                                  Toggled="UseStartupTdpToggle_Toggled"/>

                    <TextBlock Text="When on, HUDRA will start with TDP selected below."
                       Style="{StaticResource SettingsDescriptionStyle}"
                       Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2"/>
                </Grid>
            </Border>

            <StackPanel>
                <controls:TdpPickerControl x:Name="StartupTdpPicker" x:FieldModifier="public" ShowLabel="False"/>
            </StackPanel>

            <Rectangle Style="{StaticResource HudraHorizontalRule}"/>

            <!-- Sticky TDP setting -->
            <Border Background="#22FFFFFF"
            CornerRadius="12"
            Padding="20,5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>


                    <TextBlock Text="Sticky TDP" 
                       Style="{StaticResource SettingsLabelStyle}"
                       Grid.Column="0"
                       Grid.Row="0"/>

                    <ToggleSwitch x:Name="TdpCorrectionToggle"
                                  x:FieldModifier="public"
                          Grid.Column="1"
                          VerticalAlignment="Center"
                          HorizontalAlignment="Right"
                          Margin="10,0,0,0"
                          Toggled="TdpCorrectionToggle_Toggled"/>

                    <TextBlock Text="Custom TDP will be less affected by external forces."
                           Style="{StaticResource SettingsDescriptionStyle}"
                           Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2"/>
                </Grid>

            </Border>

        </StackPanel>
    </Grid>
</Page>