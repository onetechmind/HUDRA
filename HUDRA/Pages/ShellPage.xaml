<Page
    x:Class="HUDRA.Pages.ShellPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HUDRA.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Navigation Header -->
        <Border Grid.Row="0" Background="#22FFFFFF" CornerRadius="12" Padding="10" Margin="10" >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="150" />
                </Grid.ColumnDefinitions>

                <Button x:Name="BackButton"
                        Visibility="{x:Bind BackButtonVisibility, Mode=OneWay}"
                        Click="BackButton_Click"
                        FontFamily="Segoe MDL2 Assets"
                        Content="&#xE72B;"
                        FontSize="20"
                        Width="40" Height="40"
                        CornerRadius="16" BorderThickness="0"/>

                <TextBlock Grid.Column="1"
                           Text="{x:Bind CurrentPageTitle, Mode=OneWay}"
                           VerticalAlignment="Center" HorizontalAlignment="Center"
                           FontSize="18" FontFamily="Cascadia Code" Foreground="White"/>

                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
                    <Button x:Name="SettingsButton" Click="SettingsButton_Click" Width="40" Height="40" CornerRadius="16" BorderThickness="0">
                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE713;" FontSize="18"/>
                    </Button>
                    <Button x:Name="AltTabButton" Click="AltTabButton_Click" Width="40" Height="40" CornerRadius="16" BorderThickness="0">
                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE8AB;" FontSize="18"/>
                    </Button>
                    <Button x:Name="HideButton" Click="HideButton_Click" Width="40" Height="40" CornerRadius="16" BorderThickness="0">
                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE711;" FontSize="18"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content Frame -->
        <Frame x:Name="ContentFrame" Grid.Row="1" Margin="10" />
    </Grid>
</Page>
