<Page
    x:Class="HUDRA.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:HUDRA.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Margin="0">
        <StackPanel
            MaxWidth="280"
            Margin="0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Spacing="15">

            <Border>
                <TextBlock
                    Padding="0,15,0,0"
                    HorizontalAlignment="Center"
                    FontFamily="Cascadia Code"
                    FontSize="18"
                    FontWeight="SemiBold"
                    Text="SETTINGS" />
            </Border>

            <Border
                Padding="20,5"
                Background="#22FFFFFF"
                CornerRadius="12">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="4*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        Style="{StaticResource SettingsLabelStyle}"
                        Text="Use Default TDP" />

                    <ToggleSwitch
                        x:Name="UseStartupTdpToggle"
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        x:FieldModifier="public"
                        Toggled="UseStartupTdpToggle_Toggled" />

                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Style="{StaticResource SettingsDescriptionStyle}"
                        Text="When on, HUDRA will start with TDP selected below." />
                </Grid>
            </Border>

            <StackPanel>
                <controls:TdpPickerControl
                    x:Name="StartupTdpPicker"
                    x:FieldModifier="public"
                    ShowLabel="False" />
            </StackPanel>

            <Rectangle Style="{StaticResource HudraHorizontalRule}" />

            <!--  Sticky TDP setting  -->
            <Border
                Padding="20,5"
                Background="#22FFFFFF"
                CornerRadius="12">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>


                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        Style="{StaticResource SettingsLabelStyle}"
                        Text="Sticky TDP" />

                    <ToggleSwitch
                        x:Name="TdpCorrectionToggle"
                        Grid.Column="1"
                        Margin="10,0,0,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        x:FieldModifier="public"
                        Toggled="TdpCorrectionToggle_Toggled" />

                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Style="{StaticResource SettingsDescriptionStyle}"
                        Text="Custom TDP will be less affected by external forces." />
                </Grid>

            </Border>

            <Rectangle Style="{StaticResource HudraHorizontalRule}" />

            <!--  Power Profile Control  -->
            <Border Background="#22FFFFFF" CornerRadius="12" Padding="20,10">
                <StackPanel Spacing="8">
                    <TextBlock
                        Padding="10"
                        HorizontalAlignment="Center"
                        Style="{StaticResource SettingsLabelStyle}"
                        Text="Windows Power Profile" />
                    <controls:PowerProfileControl x:Name="PowerProfileControl" x:FieldModifier="public" />
                </StackPanel>
            </Border>

            <Rectangle Style="{StaticResource HudraHorizontalRule}" />

            <!--  Clean Settings UI for Startup - Task Scheduler Only  -->
            <Border
                Padding="20,5"
                Background="#22FFFFFF"
                CornerRadius="12">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="4*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>

                    <!--  Startup Toggle  -->
                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        Style="{StaticResource SettingsLabelStyle}"
                        Text="Start with Windows" />

                    <ToggleSwitch
                        x:Name="StartupToggle"
                        Grid.Row="0"
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Toggled="StartupToggle_Toggled" />

                    <!--  Description  -->
                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Margin="0,5,0,15"
                        Style="{StaticResource SettingsDescriptionStyle}"
                        Text="Automatically launch HUDRA with admin privileges when Windows starts." />

                    <!--  Minimize Toggle  -->
                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="0"
                        Style="{StaticResource SettingsLabelStyle}"
                        Text="Start Minimized" />

                    <ToggleSwitch
                        x:Name="MinimizeOnStartupToggle"
                        Grid.Row="2"
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Toggled="MinimizeOnStartupToggle_Toggled" />
                </Grid>
            </Border>
        </StackPanel>
    </Grid>
</Page>