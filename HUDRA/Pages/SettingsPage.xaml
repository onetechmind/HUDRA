<Page
    x:Class="HUDRA.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:HUDRA.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Margin="0">
        <StackPanel
            x:Name="SettingsRootPanel"
            MaxWidth="280"
            Margin="0,15,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Spacing="20">

            <Border>
                <TextBlock
                    Padding="0,15,0,0"
                    HorizontalAlignment="Center"
                    FontFamily="Cascadia Code"
                    FontSize="18"
                    FontWeight="SemiBold"
                    Text="SETTINGS" />
            </Border>

            <!--  TDP Settings  -->
            <controls:NavigableExpander
                x:Name="TdpSettingsExpander"
                HorizontalAlignment="Stretch"
                Margin="0"
                Padding="0"
                IsTabStop="True"
                TabIndex="1">
                <controls:NavigableExpander.Header>
                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                        <TextBlock
                            VerticalAlignment="Center"
                            FontFamily="Segoe MDL2 Assets"
                            FontSize="16"
                            Text="&#xE945;" />
                        <TextBlock
                            Margin="8,0,0,0"
                            VerticalAlignment="Center"
                            FontFamily="Cascadia Code"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Text="TDP Options" />
                    </StackPanel>
                </controls:NavigableExpander.Header>
                <controls:NavigableExpander.Body>
                    <controls:TdpSettingsControl x:Name="TdpSettingsControl" />
                </controls:NavigableExpander.Body>
            </controls:NavigableExpander>

            <!--  Power Profile Control  -->
            <controls:NavigableExpander
                x:Name="PowerProfileExpander"
                HorizontalAlignment="Stretch"
                Margin="0"
                Padding="0"
                IsTabStop="True"
                TabIndex="2">
                <controls:NavigableExpander.Header>
                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                        <TextBlock
                            VerticalAlignment="Center"
                            FontFamily="Segoe MDL2 Assets"
                            FontSize="20"
                            Text="&#xE83F;" />
                        <TextBlock
                            Margin="8,0,0,0"
                            VerticalAlignment="Center"
                            FontFamily="Cascadia Code"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Text="Power Profile" />
                    </StackPanel>
                </controls:NavigableExpander.Header>
                <controls:NavigableExpander.Body>
                    <controls:PowerProfileControl
                        x:Name="PowerProfileControl"
                        x:FieldModifier="public" />
                </controls:NavigableExpander.Body>
            </controls:NavigableExpander>

            <!--  Game Detection Settings  -->
            <controls:NavigableExpander
                x:Name="GameDetectionExpander"
                HorizontalAlignment="Stretch"
                Margin="0"
                Padding="0"
                IsTabStop="True"
                TabIndex="3">
                <controls:NavigableExpander.Header>
                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                        <TextBlock
                            VerticalAlignment="Center"
                            FontFamily="Segoe MDL2 Assets"
                            FontSize="16"
                            Text="&#xE7FC;" />
                        <TextBlock
                            Margin="8,0,0,0"
                            VerticalAlignment="Center"
                            FontFamily="Cascadia Code"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Text="Game Detection" />
                    </StackPanel>
                </controls:NavigableExpander.Header>
                <controls:NavigableExpander.Body>
                    <controls:GameDetectionControl x:Name="GameDetectionControl" />
                </controls:NavigableExpander.Body>
            </controls:NavigableExpander>
            <!--  Startup & Windows Integration  -->
            <controls:NavigableExpander
                x:Name="StartupSettingsExpander"
                HorizontalAlignment="Stretch"
                Margin="0"
                Padding="0"
                IsTabStop="True"
                TabIndex="4">
                <controls:NavigableExpander.Header>
                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                        <TextBlock
                            VerticalAlignment="Center"
                            FontFamily="Segoe MDL2 Assets"
                            FontSize="16"
                            Text="&#xE8FC;" />
                        <TextBlock
                            Margin="8,0,0,0"
                            VerticalAlignment="Center"
                            FontFamily="Cascadia Code"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Text="Startup &amp; Options" />
                    </StackPanel>
                </controls:NavigableExpander.Header>
                <controls:NavigableExpander.Body>
                    <controls:StartupOptionsControl x:Name="StartupOptionsControl" />
                </controls:NavigableExpander.Body>
            </controls:NavigableExpander>
        </StackPanel>
    </Grid>
</Page>