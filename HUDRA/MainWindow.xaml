<Window
    x:Class="HUDRA.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HUDRA"
    xmlns:controls="using:HUDRA.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Border x:Name="MainBorder" CornerRadius="20" Background="Transparent" >
        <Grid x:Name="LayoutRoot">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Alt+Tab button in top-left corner -->
            <Button x:Name="AltTabButton"
                Click="AltTabButton_Click"
                Width="50"
                Height="50"
                Background="Transparent"
                Foreground="White"
                CornerRadius="16"
                BorderThickness="0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,10,70,0"
                Grid.Row="0"
                Grid.RowSpan="2"
                ToolTipService.ToolTip="Previous App &amp; Hide">
                <FontIcon x:Name="AltTabButtonIcon"
                  FontFamily="Segoe MDL2 Assets"
                  Glyph="&#xE8AB;"
                  FontSize="20"/>
            </Button>

            <!-- Battery status -->
            <Grid x:Name="BatteryPanel"
                  HorizontalAlignment="Left"
                  VerticalAlignment="Top"
                  Margin="15,15,0,0"
                  Background="Transparent"
                  Padding="0"
                  Grid.Row="0"
                  ToolTipService.ToolTip="{x:Bind BatteryToolTip, Mode=OneWay}">
                <FontIcon x:Name="BatteryIcon" FontFamily="Segoe MDL2 Assets" Glyph="&#xE850;" FontSize="40" Foreground="White"/>
                <TextBlock x:Name="BatteryText" Text="{x:Bind BatteryPercentageText, Mode=OneWay}" FontSize="12" Foreground="{x:Bind BatteryTextBrush, Mode=OneWay}" Margin="0,4,0,0" FontFamily="Cascadia Code" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>

            <Button x:Name="CloseButton"
                Click="CloseButton_Click"
                Width="50"
                Height="50"
                Background="Transparent"
                Foreground="White"
                CornerRadius="16"
                BorderThickness="0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,10,10,0"
                Grid.Row="0"
                Grid.RowSpan="2">
                <Button.Content>
                    <FontIcon FontFamily="Segoe MDL2 Assets"
                  Glyph="&#xE70D;"
                  FontSize="20"/>
                </Button.Content>
            </Button>

            <Frame x:Name="ContentFrame" Grid.Row="0" />
        </Grid>    
    </Border>
</Window>