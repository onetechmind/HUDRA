<Page
    x:Class="HUDRA.Pages.LibraryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:HUDRA.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:HUDRA.Models"
    NavigationCacheMode="Enabled"
    mc:Ignorable="d">

    <Page.Resources>
        <!--  Value Converters  -->
        <local:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
        <local:InvertedNullToVisibilityConverter x:Key="InvertedNullToVisibilityConverter" />

        <!--  Library Management Button Style (Add Game / Rescan)  -->
        <Style x:Key="LibraryManagementButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2d2d2d" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="3" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="MinWidth" Value="100" />
            <Setter Property="MinHeight" Value="40" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="ButtonBorder"
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{TemplateBinding CornerRadius}">
                            <ContentPresenter
                                x:Name="ContentPresenter"
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                Content="{TemplateBinding Content}" />

                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal" />
                                    <VisualState x:Name="PointerOver">
                                        <Storyboard>
                                            <ColorAnimation
                                                Storyboard.TargetName="ButtonBorder"
                                                Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                To="#454545"
                                                Duration="0:0:0.1" />
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Pressed">
                                        <Storyboard>
                                            <ColorAnimation
                                                Storyboard.TargetName="ButtonBorder"
                                                Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                To="#670195"
                                                Duration="0:0:0.05" />
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                                <VisualStateGroup x:Name="FocusStates">
                                    <VisualState x:Name="Focused">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ButtonBorder" Storyboard.TargetProperty="BorderBrush">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="DarkViolet" />
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Unfocused">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ButtonBorder" Storyboard.TargetProperty="BorderBrush">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="Transparent" />
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="PointerFocused">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ButtonBorder" Storyboard.TargetProperty="BorderBrush">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="DarkViolet" />
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  Game Tile Style  -->
        <Style x:Key="GameTileButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2d2d2d" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="VerticalAlignment" Value="Stretch" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="VerticalContentAlignment" Value="Stretch" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="ButtonBorder"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{TemplateBinding CornerRadius}">
                            <ContentPresenter
                                x:Name="ContentPresenter"
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                Content="{TemplateBinding Content}" />

                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal" />
                                    <VisualState x:Name="PointerOver">
                                        <Storyboard>
                                            <ColorAnimation
                                                Storyboard.TargetName="ButtonBorder"
                                                Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                To="#454545"
                                                Duration="0:0:0.1" />
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Pressed">
                                        <Storyboard>
                                            <ColorAnimation
                                                Storyboard.TargetName="ButtonBorder"
                                                Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                To="#670195"
                                                Duration="0:0:0.05" />
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                                <VisualStateGroup x:Name="FocusStates">
                                    <VisualState x:Name="Focused">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ButtonBorder" Storyboard.TargetProperty="BorderBrush">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="DarkViolet" />
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ButtonBorder" Storyboard.TargetProperty="BorderThickness">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="3" />
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Unfocused">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ButtonBorder" Storyboard.TargetProperty="BorderBrush">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="Transparent" />
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ButtonBorder" Storyboard.TargetProperty="BorderThickness">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="0" />
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="PointerFocused">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ButtonBorder" Storyboard.TargetProperty="BorderBrush">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="DarkViolet" />
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ButtonBorder" Storyboard.TargetProperty="BorderThickness">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="3" />
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <StackPanel
        x:Name="LibraryRootPanel"
        MaxWidth="320"
        Margin="0"
        HorizontalAlignment="Center"
        x:FieldModifier="public"
        Spacing="20">

        <!--  Header  -->
        <Border>
            <TextBlock
                Margin="0,25,0,0"
                HorizontalAlignment="Center"
                FontFamily="Cascadia Code"
                FontSize="18"
                FontWeight="SemiBold"
                IsTabStop="False"
                Text="LIBRARY" />
        </Border>

        <!--  SteamGridDB Hint InfoBar  -->
        <InfoBar
            x:Name="SgdbHintBar"
            Title="Enhance your library with SteamGridDB!"
            Closed="SgdbHintBar_Closed"
            IsClosable="True"
            IsOpen="False"
            Message="Add your free SteamGridDB API key in Settings to fetch game artwork from within HUDRA!"
            Severity="Informational" />

        <!--  Game Management Buttons  -->
        <StackPanel
            Margin="0,-10,0,-10"
            HorizontalAlignment="Center"
            Orientation="Horizontal"
            Spacing="10">
            <Button
                x:Name="AddGameButton"
                Click="AddGameButton_Click"
                Style="{StaticResource LibraryManagementButtonStyle}">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon
                        FontFamily="Segoe MDL2 Assets"
                        FontSize="14"
                        Glyph="&#xE710;" />
                    <TextBlock
                        FontFamily="Cascadia Code"
                        FontSize="14"
                        Text="Add Game" />
                </StackPanel>
            </Button>

            <Button
                x:Name="RescanButton"
                Click="RescanButton_Click"
                Style="{StaticResource LibraryManagementButtonStyle}">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon
                        FontFamily="Segoe MDL2 Assets"
                        FontSize="14"
                        Glyph="&#xE72C;" />
                    <TextBlock
                        FontFamily="Cascadia Code"
                        FontSize="14"
                        Text="Rescan" />
                </StackPanel>
            </Button>

            <Button
                x:Name="RandomButton"
                Click="RandomButton_Click"
                Style="{StaticResource LibraryManagementButtonStyle}">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon
                        FontFamily="Segoe MDL2 Assets"
                        FontSize="14"
                        Glyph="&#xE8B1;" />
                    <TextBlock
                        FontFamily="Cascadia Code"
                        FontSize="14"
                        Text="Random" />
                </StackPanel>
            </Button>
        </StackPanel>

        <!--  Gamepad Legend  -->
        <StackPanel
            HorizontalAlignment="Center"
            IsTabStop="False"
            Orientation="Horizontal"
            Spacing="6">
            <Image
                Width="25"
                Height="25"
                VerticalAlignment="Center"
                Source="ms-appx:///Assets/Glyphs/xbox_button_x.png" />
            <TextBlock
                VerticalAlignment="Center"
                FontFamily="Cascadia Code"
                FontSize="14"
                Foreground="#888888"
                IsTabStop="False"
                Text="Game Settings" />
        </StackPanel>

        <!--  Scan Progress Indicator  -->
        <Border
            x:Name="ScanProgressIndicator"
            MaxWidth="300"
            Padding="12,10"
            HorizontalAlignment="Center"
            Background="#2d2d2d"
            BorderBrush="#670195"
            BorderThickness="1"
            CornerRadius="10"
            Visibility="Collapsed">
            <Grid ColumnSpacing="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <ProgressRing
                    Grid.Column="0"
                    Width="20"
                    Height="20"
                    VerticalAlignment="Top"
                    Foreground="#670195"
                    IsActive="True" />
                <TextBlock
                    x:Name="ScanProgressText"
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    FontFamily="Cascadia Code"
                    FontSize="12"
                    Foreground="#CCCCCC"
                    Text="Scanning..."
                    TextWrapping="Wrap" />
            </Grid>
        </Border>

        <!--  Game Grid  -->
        <ItemsControl
            x:Name="GamesItemsControl"
            MaxWidth="320"
            HorizontalAlignment="Center"
            TabNavigation="Once"
            XYFocusKeyboardNavigation="Enabled">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <ItemsWrapGrid
                        HorizontalAlignment="Center"
                        MaximumRowsOrColumns="2"
                        Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate x:DataType="models:DetectedGame">
                    <StackPanel Margin="5" Spacing="5">
                        <!--  Game Tile Button  -->
                        <Button
                            Width="125"
                            Height="82"
                            Click="GameTile_Click"
                            IsTabStop="True"
                            PointerEntered="GameTile_PointerEntered"
                            PointerExited="GameTile_PointerExited"
                            Style="{StaticResource GameTileButtonStyle}"
                            TabIndex="0"
                            Tag="{Binding}">
                            <Grid Background="Transparent">
                                <!--  Artwork Image  -->
                                <Image
                                    x:Name="ArtworkImage"
                                    Source="{x:Bind ArtworkPath, Mode=OneWay}"
                                    Stretch="UniformToFill"
                                    Visibility="{x:Bind ArtworkPath, Converter={StaticResource NullToVisibilityConverter}}" />

                                <!--  Fallback: No Artwork Image  -->
                                <Image
                                    IsHitTestVisible="False"
                                    Source="ms-appx:///Assets/no-artwork-grid.png"
                                    Stretch="UniformToFill"
                                    Visibility="{x:Bind ArtworkPath, Converter={StaticResource InvertedNullToVisibilityConverter}}" />

                                <!--  Launching Overlay  -->
                                <Border
                                    x:Name="TileLaunchingOverlay"
                                    Background="#CC670195"
                                    CornerRadius="12"
                                    Visibility="Collapsed">
                                    <StackPanel
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Spacing="5">
                                        <ProgressRing
                                            Width="24"
                                            Height="24"
                                            Foreground="White"
                                            IsActive="True" />
                                        <TextBlock
                                            FontFamily="Cascadia Code"
                                            FontSize="10"
                                            FontWeight="SemiBold"
                                            Foreground="White"
                                            Text="Launching..."
                                            TextAlignment="Center" />
                                    </StackPanel>
                                </Border>

                                <!--  Settings Icon Overlay (shown on hover)  -->
                                <Border
                                    x:Name="TileSettingsOverlay"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    Background="Transparent"
                                    CornerRadius="12"
                                    Visibility="Collapsed">
                                    <Button
                                        x:Name="SettingsIconButton"
                                        Width="40"
                                        Height="40"
                                        Margin="0,0,5,5"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Bottom"
                                        Background="#333333"
                                        BorderBrush="Transparent"
                                        Click="SettingsIcon_Click"
                                        CornerRadius="6"
                                        ToolTipService.ToolTip="Game settings">
                                        <FontIcon
                                            FontFamily="Segoe MDL2 Assets"
                                            FontSize="20"
                                            Foreground="White"
                                            Glyph="&#xE713;" />
                                    </Button>
                                </Border>
                            </Grid>
                        </Button>

                        <!--  Game Name Below Tile  -->
                        <TextBlock
                            Width="135"
                            Height="40"
                            Padding="5"
                            HorizontalAlignment="Center"
                            FontFamily="Cascadia Code"
                            FontSize="11"
                            Foreground="White"
                            MaxLines="2"
                            Text="{x:Bind DisplayName, Mode=OneWay}"
                            TextAlignment="Center"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!--  Empty State  -->
        <Border
            x:Name="EmptyStatePanel"
            Padding="20"
            HorizontalAlignment="Center"
            Background="#2d2d2d"
            CornerRadius="12"
            Visibility="Collapsed">
            <StackPanel Spacing="10">
                <TextBlock
                    HorizontalAlignment="Center"
                    FontFamily="Cascadia Code"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Foreground="White"
                    Text="No games found" />
                <TextBlock
                    HorizontalAlignment="Center"
                    FontFamily="Calibri"
                    FontSize="13"
                    Foreground="#99FFFFFF"
                    Text="Enable Enhanced Library Scanning in Settings"
                    TextAlignment="Center"
                    TextWrapping="Wrap" />
            </StackPanel>
        </Border>

        <!--  Roulette Modal  -->
        <Border
            x:Name="RouletteModal"
            Margin="0,20,0,0"
            Padding="40"
            HorizontalAlignment="Center"
            Background="#EE1a1a1a"
            CornerRadius="16"
            Visibility="Collapsed">
            <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Spacing="15">

                <!--  Game Tile Display  -->
                <Grid
                    Width="200"
                    Height="300"
                    HorizontalAlignment="Center">
                    <!--  Game Artwork  -->
                    <Border
                        Background="#2d2d2d"
                        CornerRadius="12">
                        <Image
                            x:Name="RouletteGameImage"
                            Stretch="UniformToFill" />
                    </Border>

                    <!--  Countdown Overlay (shown after spin ends)  -->
                    <Border
                        x:Name="RouletteCountdownOverlay"
                        Background="#CC670195"
                        CornerRadius="12"
                        Visibility="Collapsed">
                        <TextBlock
                            x:Name="RouletteCountdownText"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontFamily="Cascadia Code"
                            FontSize="96"
                            FontWeight="Bold"
                            Foreground="White"
                            Text="3" />
                    </Border>
                </Grid>

                <!--  Game Name  -->
                <TextBlock
                    x:Name="RouletteGameNameText"
                    MaxWidth="250"
                    HorizontalAlignment="Center"
                    FontFamily="Cascadia Code"
                    FontSize="18"
                    FontWeight="SemiBold"
                    Foreground="White"
                    Text="Game Name"
                    TextAlignment="Center"
                    TextTrimming="CharacterEllipsis"
                    TextWrapping="NoWrap" />

                <!--  Cancel Button  -->
                <Button
                    x:Name="RouletteCancelButton"
                    Margin="0,10,0,0"
                    Padding="30,10"
                    HorizontalAlignment="Center"
                    Click="RouletteCancelButton_Click"
                    Content="Cancel"
                    FontFamily="Cascadia Code"
                    FontSize="14" />
            </StackPanel>
        </Border>

    </StackPanel>
</Page>
